<h1 class="mb-1 restaurant-show-title">{{ restaurant.name }}</h1>
<div class="container">
  <div class="row">
    <div class="col-12 col-md-10 mx-auto">

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-utensils pr-2 fa-lg"></i>
          類別：
        </span>
        {{ restaurant.category }}
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-map-marker-alt pr-2 fa-lg"></i>
          地址：
        </span>
        {{ restaurant.location }}
        <a href="{{ restaurant.google_map }}" class="text-secondary" target="_blank">
          <i class="fas fa-location-arrow pr-2 fa-lg"></i>
        </a>
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-mobile-alt pr-2 fa-lg"></i>
          電話：
        </span>
        {{ restaurant.phone }}
      </p>

      <p class="mb-5 ml-2">
        {{ restaurant.description }}
      </p>

      <img class="rounded mx-auto d-block mb-4 w-100"
        src="{{ restaurant.image }}" alt="{{ restaurant.name }}"
        style="max-width: 600px;">
      <div class="restaurant-button-group m-2 mx-auto d-flex container justify-content-around align-items-center">
        <a class="btn btn-warning" href="/restaurants/{{ restaurant._id }}/edit" role="button">Edit</a>
        <a class="btn btn-primary" href="/" role="button">Back</a>
        <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#deleteModal">Delete</button>
      </div>
    </div>
  </div>
</div>