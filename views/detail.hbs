<h1 class="mb-1 restaurant-show-title">{{ restaurant.name }}</h1>
<div class="container">
  <div class="row">
    <div class="col-12 col-md-10 mx-auto">

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-utensils pr-2 fa-lg"></i>
          類別：
        </span>
        {{ restaurant.category }}
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-map-marker-alt pr-2 fa-lg"></i>
          地址：
        </span>
        {{ restaurant.location }}
        <a href="{{ restaurant.google_map }}" class="text-secondary" target="_blank">
          <i class="fas fa-location-arrow pr-2 fa-lg"></i>
        </a>
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-mobile-alt pr-2 fa-lg"></i>
          電話：
        </span>
        {{ restaurant.phone }}
      </p>

      <p class="mb-5 ml-2">
        {{ restaurant.description }}
      </p>

      <img class="rounded mx-auto d-block mb-4 w-100"
        src="{{ restaurant.image }}" alt="{{ restaurant.name }}"
        style="max-width: 600px;">
      <div class="restaurant-button-group d-flex container justify-content-end align-items-center p-0 mb-3">
        <a class="btn btn-warning m-1" href="/restaurants/{{ restaurant._id }}/edit" role="button">Edit</a>
        <a class="btn btn-primary" href="/" role="button">Back</a>
        <button type="button" class="btn btn-danger m-1 deleteButton" data-toggle="modal"
          data-target="#deleteModal{{ restaurant._id }}">Delete</button>
      </div>

      <!-- Modal -->
      <div class="modal fade" id="deleteModal{{ restaurant._id }}" tabindex="-1" aria-labelledby="deleteModalLabel"
        aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="deleteModalLabel">這是一個簡單的小提醒</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              確定要刪除 {{ restaurant.name }} 嗎？
            </div>
            <div class="modal-footer">
              <form action="/restaurants/{{ restaurant._id }}/?_method=DELETE" method="POST">
                <button type="submit" class="btn btn-danger">是的，我確定</button>
                <button type="button" class="btn btn-primary" data-dismiss="modal">並沒有</button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>